generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Movie {
  id                String      @id @default(cuid())
  title            String
  releaseDate      DateTime
  director         String
  cast            String[]
  releaseType      ReleaseType @default(THEATRICAL)
  platform         String?     // For direct OTT releases
  ottRelease       OttRelease?
  imageUrl         String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
}

model OttRelease {
  id        String   @id @default(cuid())
  date      DateTime?
  platform  String?
  movieId   String   @unique
  movie     Movie    @relation(fields: [movieId], references: [id])
}

enum ReleaseType {
  THEATRICAL
  OTT
  PAST_OTT
}